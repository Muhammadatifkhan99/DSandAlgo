{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "compile-and-run-smart",
            "type": "shell",
            "command": "bash",
            "args": [
                "-lc",
                "g++ -std=c++17 -Wall \"${file}\" -o main.out && ./main.out < input.txt > output.txt"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "echo": false
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        }
    ]
}
