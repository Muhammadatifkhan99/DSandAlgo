{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-and-run-cpp",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++17",
                "-Wall",
                "${file}",
                "-o",
                "main.out",
                "&&",
                "./main.out",
                "<",
                "input.txt",
                ">",
                "output.txt"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "echo": false
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        }
    ]
}
